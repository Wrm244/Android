<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ArticleTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/background</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ArticleSubtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/article_title</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ArticleText">
        <item name="android:lineSpacingExtra" >5sp</item >
        <item name="android:padding">100dp</item >
        <item name="android:layout_below">@+id/article_subheading</item>
        <item name="android:layout_width">match_parent</item >
        <item name="android:layout_height">wrap_content</item >
</style>
</resources>